<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CheckPersonalInfoActivity" android:id="@+id/ExplanationText">

    <CheckBox
            android:layout_width="296dp"
            android:layout_height="38dp"
            android:id="@+id/checkBox" android:text="プライバシーポリシーに同意し新規登録"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollForPrivacy"/>
    <Button
            android:text="次へ"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/ToConfirmButtonmoveToConfirmationBtn" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"/>

    <ScrollView android:layout_width="0dp" android:layout_height="336dp"
                android:id="@+id/scrollForPrivacy" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
    >
        <TextView
                android:text="@string/privacyPolicyText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/privacyPolicyText" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
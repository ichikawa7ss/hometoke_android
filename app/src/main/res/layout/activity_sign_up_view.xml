<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpView" android:orientation="vertical" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/kihonnjouhou" android:id="@+id/imageView"
            tools:layout_conversion_absoluteHeight="98dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:text="お名前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="56dp"
            app:layout_constraintStart_toStartOf="@+id/userNm"
            app:layout_constraintBottom_toTopOf="@+id/userNm"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0" app:srcCompat="@drawable/require" android:id="@+id/imageView2"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="65dp"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

    <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userNm"
            android:layout_width="0" tools:layout_conversion_absoluteHeight="45dp"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="性別"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            tools:layout_conversion_absoluteHeight="19dp" tools:layout_editor_absoluteY="220dp"
            tools:layout_conversion_absoluteWidth="56dp"
            app:layout_constraintStart_toStartOf="@+id/manBtn"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0" app:srcCompat="@drawable/require" android:id="@+id/imageView3"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="65dp"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>


    <ImageButton
            android:layout_width="0"
            app:srcCompat="@drawable/manon" android:id="@+id/manBtn"
            tools:layout_conversion_absoluteHeight="42dp"
            app:layout_constraintWidth_percent="0.3"
            android:layout_height="42dp"
            app:layout_constraintStart_toStartOf="@+id/userNm" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/userNm"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/womanoff" android:id="@+id/womanBtn"
            tools:layout_conversion_absoluteHeight="59dp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintTop_toTopOf="@+id/manBtn" app:layout_constraintBottom_toBottomOf="@+id/manBtn"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/manBtn"
    />
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="42dp" app:srcCompat="@drawable/otheroff" android:id="@+id/otherBtn"
            tools:layout_conversion_absoluteHeight="59dp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintTop_toTopOf="@+id/womanBtn" app:layout_constraintBottom_toBottomOf="@+id/womanBtn"
            app:layout_constraintStart_toEndOf="@+id/womanBtn" app:layout_constraintEnd_toEndOf="@+id/userNm"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>


    <TextView
            android:text="生年月日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="56dp"
            app:layout_constraintStart_toStartOf="@+id/birthYear"
            app:layout_constraintBottom_toTopOf="@+id/birthYear"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0" app:srcCompat="@drawable/unrequire" android:id="@+id/imageView8"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="65dp"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>


    <EditText
            android:layout_height="50"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/birthYear"
            android:layout_width="0" tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_conversion_absoluteWidth="92dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/manBtn" app:layout_constraintStart_toStartOf="@+id/manBtn"
            app:layout_constraintEnd_toStartOf="@+id/womanBtn"
    />
    <TextView
            android:text="年"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="14dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/birthMonth" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/birthYear" app:layout_constraintBottom_toTopOf="@+id/birthYear"/>
    <EditText
            android:layout_height="50"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/birthMonth"
            android:layout_width="0" tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_conversion_absoluteWidth="92dp"
            app:layout_constraintStart_toStartOf="@+id/womanBtn"
            app:layout_constraintTop_toTopOf="@+id/birthYear" app:layout_constraintBottom_toBottomOf="@+id/birthYear"
            app:layout_constraintEnd_toStartOf="@+id/otherBtn"
    />
    <TextView
            android:text="月"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="14dp"
            app:layout_constraintTop_toTopOf="@+id/birthMonth"
            app:layout_constraintBottom_toBottomOf="@+id/birthMonth" app:layout_constraintEnd_toStartOf="@+id/birthDay"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_height="50"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/birthDay"
            android:layout_width="0" tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_conversion_absoluteWidth="92dp"
            app:layout_constraintEnd_toEndOf="@+id/otherBtn"
            app:layout_constraintTop_toTopOf="@+id/birthMonth"
            app:layout_constraintBottom_toBottomOf="@+id/birthMonth"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/womanBtn"
    />
    <TextView
            android:text="日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_editor_absoluteX="364dp" tools:layout_conversion_absoluteWidth="14dp"
            app:layout_constraintTop_toTopOf="@+id/birthDay" app:layout_constraintBottom_toBottomOf="@+id/birthDay"/>


    <TextView
            android:text="メールアドレス"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="99dp"
            app:layout_constraintStart_toStartOf="@+id/userMailAddress"
            app:layout_constraintBottom_toTopOf="@+id/userMailAddress"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0" app:srcCompat="@drawable/require" android:id="@+id/imageView9"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="65dp"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

    <EditText
            android:layout_height="50"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userMailAddress"
            android:layout_width="0" tools:layout_conversion_absoluteHeight="39dp"
            tools:layout_conversion_absoluteWidth="411dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/birthMonth"
            app:layout_constraintStart_toStartOf="@+id/userNm" app:layout_constraintEnd_toEndOf="@+id/userNm"/>

    <TextView
            android:text="パスワード"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="70dp"
            app:layout_constraintStart_toStartOf="@+id/userPassword"
            app:layout_constraintBottom_toTopOf="@+id/userPassword"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0" app:srcCompat="@drawable/require" android:id="@+id/imageView11"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="65dp"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

    <EditText
            android:layout_height="50"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/userPassword"
            android:layout_width="0" tools:layout_conversion_absoluteHeight="39dp"
            tools:layout_conversion_absoluteWidth="411dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/userMailAddress"
            app:layout_constraintStart_toStartOf="@+id/userNm" app:layout_constraintEnd_toEndOf="@+id/userNm"/>

    <TextView
            android:text="パスワード(確認)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="109dp"
            app:layout_constraintStart_toStartOf="@+id/userPasswordConfirm"
            app:layout_constraintBottom_toTopOf="@+id/userPasswordConfirm"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0" app:srcCompat="@drawable/require" android:id="@+id/imageView10"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="65dp"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

    <EditText
            android:layout_height="50"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/userPasswordConfirm"
            android:layout_width="0" tools:layout_conversion_absoluteHeight="39dp"
            tools:layout_conversion_absoluteWidth="411dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/userPassword"
            app:layout_constraintStart_toStartOf="@+id/userNm" app:layout_constraintEnd_toEndOf="@+id/userNm"/>
    <Button
            android:text="次へ"
            android:layout_width="０"
            android:layout_height="50"
            android:id="@+id/moveRegisterSchoolsViewBtn"
            tools:layout_conversion_absoluteHeight="48dp" tools:layout_conversion_absoluteWidth="411dp"
            android:background="#3B4043" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/userNm" app:layout_constraintEnd_toEndOf="@+id/userNm"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/userPasswordConfirm"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpView" android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/progress" android:id="@+id/imageView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="お名前　"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"/>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="20dp" app:srcCompat="@drawable/require" android:id="@+id/imageView2"/>
    </LinearLayout>
    <EditText
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="24dp" android:id="@+id/userNm"
            android:layout_width="match_parent" android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="性別　　"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"/>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="20dp" app:srcCompat="@drawable/require" android:id="@+id/imageView3"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/manon" android:id="@+id/manBtn"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/womanoff" android:id="@+id/womanBtn"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/otheroff" android:id="@+id/otherBtn"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="生年月日"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"/>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="20dp" app:srcCompat="@drawable/unrequire" android:id="@+id/imageView8"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="24dp" android:id="@+id/birthYear"
                android:layout_width="92dp" android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="年"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                android:layout_gravity="center"/>
        <EditText
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="24dp" android:id="@+id/birthMonth"
                android:layout_width="92dp" android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="月"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                android:layout_gravity="center"/>
        <EditText
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="24dp" android:id="@+id/birthDay"
                android:layout_width="92dp" android:layout_gravity="center" android:layout_weight="1"/>
        <TextView
                android:text="日"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="メールアドレス"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"/>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="20dp" app:srcCompat="@drawable/require" android:id="@+id/imageView9"
                android:layout_weight="1"/>
    </LinearLayout>
    <EditText
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="24dp" android:id="@+id/userMailAddress"
            android:layout_width="match_parent" android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="パスワード"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"/>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="20dp" app:srcCompat="@drawable/require" android:id="@+id/imageView11"
                android:layout_weight="1"/>
    </LinearLayout>
    <EditText
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="24dp" android:id="@+id/userPassword"
            android:layout_width="match_parent" android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="0" android:alwaysDrawnWithCache="true">
        <TextView
                android:text="パスワード(確認)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"/>
        <ImageView
                android:layout_width="65dp"
                android:layout_height="20dp" app:srcCompat="@drawable/require" android:id="@+id/imageView10"
                android:layout_weight="1"/>
    </LinearLayout>
    <EditText
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="24dp"
            android:id="@+id/userPasswordConfirm"
            android:layout_width="match_parent" android:layout_gravity="center"/>
    <Button
            android:text="次へ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="465dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/moveRegisterSchoolsViewBtn"/>
</LinearLayout>
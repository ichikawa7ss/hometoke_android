<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Confirmation" android:orientation="vertical">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/kihonnjouhou"
            android:id="@+id/imageView4" android:layout_weight="1"/>
    <TextView
            android:text="お名前"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/userNmLabel" android:layout_weight="1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userNm" android:layout_weight="1"/>
    <TextView
            android:text="性別"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/userSexLabel" android:layout_weight="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/userSex" android:layout_weight="1"/>
    <TextView
            android:text="生年月日"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/userBirthDayLabel" android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/birthYear" android:layout_weight="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/birthYearLabel" android:layout_weight="1"
                android:text="年　"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/birthMonth" android:layout_weight="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/birthMonthLabel" android:layout_weight="1"
                android:text="月　"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/birthDay" android:layout_weight="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/birthDayLabel" android:layout_weight="1"
                android:text="日　"/>
    </LinearLayout>
    <TextView
            android:text="メールアドレス"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mailAddressLabel" android:layout_weight="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mailAddress" android:layout_weight="1"/>
    <TextView
            android:text="小学校"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ElemetarySchoolLabel" android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/elementarySchoolEntryYear"
                android:layout_weight="1"/>
        <TextView
                android:text="年度入学　"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/elementalySchoolEntryYearLabel"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ElementarySchool" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="中学校"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/JuniorHighSchoolSchoolLabel"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/juniorHighSchoolEntryYear"
                android:layout_weight="1"/>
        <TextView
                android:text="年度入学　"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/juniorHighSchoolEntryYearLabel"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/JuniorHighSchool" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="高等学校"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/HighSchoolSchoolLabel"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/highSchoolEntryYear"
                android:layout_weight="1"/>
        <TextView
                android:text="年度入学　"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/highSchoolEntryYearLabel"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/HighSchool" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="完了"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/CompleteBtn" android:layout_weight="1"/>
</LinearLayout>
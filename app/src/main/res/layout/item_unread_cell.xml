<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:background="#E5F5E4"
                                             tools:layout_editor_absoluteY="81dp">

    <ImageView
            android:layout_width="86dp"
            android:layout_height="96dp" app:srcCompat="@drawable/noimage"
            android:id="@+id/unreadPost"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/unreadServerUser"
            tools:text="From Team-TOKE"
            tools:layout_editor_absoluteY="66dp" app:layout_constraintStart_toStartOf="@+id/unreadMessage"
            app:layout_constraintEnd_toEndOf="@+id/unreadMessage"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unreadServeDate" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2019/05/01"/>
    <TextView
            android:text="お手紙が届いています"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unreadMessage"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/unreadServeDate"
            app:layout_constraintStart_toEndOf="@+id/unreadPost" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>
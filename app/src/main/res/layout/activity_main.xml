<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage2"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="75dp" android:layout_marginStart="75dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverName0"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName2" android:layout_width="100dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage2"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage3"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverName1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="75dp" android:layout_marginRight="75dp"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName3" android:layout_width="100dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="75dp" android:layout_marginRight="75dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage3"/>
    <ImageView
            android:layout_width="155dp"
            android:layout_height="159dp" app:srcCompat="?attr/actionModeCopyDrawable"
            android:id="@+id/questionImage" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="128dp" android:layout_marginStart="128dp"/>
    <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/questionPhrase" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/questionImage"
            android:layout_width="200dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="106dp"
            android:layout_marginRight="106dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="106dp" android:layout_marginStart="106dp" android:gravity="center"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage0" android:layout_marginTop="14dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@+id/questionPhrase" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="75dp" android:layout_marginStart="75dp"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage1"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="75dp" android:layout_marginRight="75dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/questionPhrase"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName0" android:layout_width="100dp"
            android:gravity="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="75dp" android:layout_marginStart="75dp"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName1" android:layout_width="100dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage1"/>
    <Button
            android:text="friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friendShuffulBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverName2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp" android:background="@color/colorPrimary"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/allShuffulBtn" android:layout_marginEnd="1dp" android:layout_marginRight="1dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverName3"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ServeView" android:scrollbarTrackVertical="@drawable/friends_shaffle"
        tools:layout_editor_absoluteY="81dp">

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage2"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/noimage"
            app:layout_constraintTop_toTopOf="@+id/receiverName0"
            app:layout_constraintDimensionRatio="h,1:1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:scaleType="fitCenter"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName2" android:layout_width="100dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/receiverImage2"
            app:layout_constraintEnd_toEndOf="@+id/receiverImage2"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage2" android:layout_marginTop="5dp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage3"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/noimage"
            app:layout_constraintStart_toStartOf="@+id/receiverImage0"
            app:layout_constraintEnd_toEndOf="@+id/receiverImage0" app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName3" android:layout_width="100dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/receiverImage3"
            app:layout_constraintEnd_toEndOf="@+id/receiverImage3"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage3" android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/rukawa"
            android:id="@+id/questionImage"
            app:layout_constraintHeight_percent="0.38"
            app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"/>
    <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/questionPhrase"
            android:layout_width="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/questionImage"
            app:layout_constraintEnd_toEndOf="@+id/questionImage"
            app:layout_constraintTop_toBottomOf="@+id/questionImage" android:layout_marginTop="10dp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage0"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/noimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionPhrase" android:layout_marginTop="20dp"
            app:layout_constraintDimensionRatio="h,1:1" android:scaleType="fitCenter"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/receiverImage1"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/noimage"
            app:layout_constraintTop_toTopOf="@+id/receiverName0"
            app:layout_constraintDimensionRatio="h,1:1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp" android:layout_marginEnd="30dp" android:scaleType="fitCenter"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName0" android:layout_width="100dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/receiverImage0"
            app:layout_constraintEnd_toEndOf="@+id/receiverImage0"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage0" android:layout_marginTop="5dp"/>
    <TextView
            android:text="TextView"
            android:layout_height="18dp"
            android:id="@+id/receiverName1" android:layout_width="100dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/receiverImage1"
            app:layout_constraintEnd_toEndOf="@+id/receiverImage1"
            app:layout_constraintTop_toBottomOf="@+id/receiverImage1" android:layout_marginTop="5dp"/>

    <ImageButton
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/allShuffulBtn"
            app:srcCompat="@drawable/all_shaffle"
            tools:visibility="visible" android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/receiverImage2"
            app:layout_constraintTop_toBottomOf="@+id/receiverName2" android:layout_marginTop="10dp"/>
    <ImageButton
            android:layout_width="91dp"
            android:layout_height="74dp" app:srcCompat="@drawable/friends_shaffle"
            android:id="@+id/friendShuffulBtn"
            android:background="#00FFFFFF" app:layout_constraintEnd_toEndOf="@+id/receiverImage1"
            app:layout_constraintTop_toBottomOf="@+id/receiverName1" android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>